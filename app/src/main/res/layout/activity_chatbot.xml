<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_chatbot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEE0"
    tools:context=".ChatbotActivity">
  <!--상단 로고 -->
  <LinearLayout
      android:id="@+id/layout_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_margin="16dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:contentDescription="@string/app_name_desc"
        android:textSize="32sp"
        android:textColor="#5D3316"
        android:fontFamily="@font/paperlogy_7"
        />
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="52sp"
        android:layout_height="52sp"
        android:src="@drawable/photolog_logo"
        android:contentDescription="@string/app_logo_desc"
        android:layout_margin="2dp"
        />
  </LinearLayout>
  <!-- 끝내기 버튼 -->
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_finish_chat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginEnd="10dp"
      android:background="@drawable/button_background"
      android:fontFamily="@font/paperlogy_7"
      android:paddingHorizontal="14dp"
      android:text="끝내기"
      android:textColor="#6D4C41"
      android:textSize="30sp"
      android:visibility="invisible"
      android:enabled="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  <!-- 상단 구분선 -->
  <View
      android:id="@+id/separator_top"
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:layout_marginTop="10dp"
      android:background="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btn_finish_chat" />
  <!-- 대화 영역 (보더 + 스크롤) -->
  <FrameLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:id="@+id/chat_border_box"
      android:padding="8dp"
      app:layout_constraintTop_toBottomOf="@id/separator_top"
      app:layout_constraintBottom_toTopOf="@id/separator_bottom"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_recycler_view"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:listitem="@layout/item_chat_ai_question"
        />
  </FrameLayout>
  <!-- 하단 구분선 -->

  <View
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:id="@+id/separator_bottom"
      android:background="#000000"
      android:layout_marginBottom="30dp"
      app:layout_constraintBottom_toTopOf="@id/btn_mic"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
    />
  <!-- 음성 인식 버튼 -->
  <ImageButton
      android:id="@+id/btn_mic"
      android:layout_width="180dp"
      android:layout_height="180dp"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="40dp"
      android:background="@drawable/mic_background"
      android:contentDescription="@string/mic_button_desc"
      android:padding="20dp"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_mic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>