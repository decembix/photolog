<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성 옵션"
        android:textColor="#5D3316"
        android:textSize="22sp"
        android:fontFamily="@font/paperlogy_7"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일기를 새로 작성할 방법을 선택하세요."
        android:textColor="#7B5A42"
        android:textSize="16sp"
        android:fontFamily="@font/paperlogy_4"
        android:layout_marginBottom="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_background"
        android:text="사진 다시 선택"
        android:textColor="#5D3316"
        android:textSize="18sp"
        android:fontFamily="@font/paperlogy_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rewrite_diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:text="일기 다시 쓰기"
        android:textColor="#5D3316"
        android:textSize="18sp"
        android:fontFamily="@font/paperlogy_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="취소"
        android:textColor="#5D3316"
        android:textSize="16sp"
        android:fontFamily="@font/paperlogy_7"
        android:paddingHorizontal="24dp"
        android:paddingVertical="6dp" />
</LinearLayout>
