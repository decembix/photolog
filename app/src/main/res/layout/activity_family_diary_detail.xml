<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEE0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 상단 로고 -->
        <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textColor="#5D3316"
                android:fontFamily="@font/paperlogy_7" />

            <ImageView
                android:layout_width="52sp"
                android:layout_height="52sp"
                android:src="@drawable/photolog_logo"
                android:layout_margin="2dp" />
        </LinearLayout>

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 일기_1"
            android:textSize="20sp"
            android:textColor="#5D3316"
            android:fontFamily="@font/paperlogy_7"
            android:layout_marginBottom="4dp"/>

        <!-- 작성자 + 날짜 -->
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김OO"
            android:textSize="14sp"
            android:textColor="#7B5A42"
            android:fontFamily="@font/paperlogy_6"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 11월 09일"
            android:textSize="13sp"
            android:textColor="#7B5A42"
            android:fontFamily="@font/paperlogy_4"
            android:layout_marginBottom="12dp"/>

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/img_diary"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:background="@drawable/photo_clip_mask"/>

        <!-- 본문 -->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘은 고양이와 함께한 하루였어요. 매우 평화로운 날이었습니다."
            android:textSize="16sp"
            android:textColor="#5D3316"
            android:fontFamily="@font/paperlogy_4"
            android:layout_marginBottom="20dp"/>

        <!-- 댓글 타이틀 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textSize="18sp"
            android:textColor="#5D3316"
            android:fontFamily="@font/paperlogy_7"
            android:layout_marginBottom="8dp"/>

        <!-- 댓글 리스트 -->
        <LinearLayout
            android:id="@+id/comment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/comment_box_background"
            android:layout_marginBottom="12dp"/>

        <!-- 댓글 입력창 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:hint="댓글을 입력하세요"
                android:padding="8dp"
                android:fontFamily="@font/paperlogy_4"
                android:textColor="#5D3316"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"
                android:background="@drawable/button_background"
                android:textColor="#5D3316"
                android:fontFamily="@font/paperlogy_7"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
