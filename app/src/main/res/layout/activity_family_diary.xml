<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEE0"
    tools:context=".FamilyDiaryActivity">

    <LinearLayout
        android:id="@+id/layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="#5D3316"
            android:fontFamily="@font/paperlogy_7" />

        <ImageView
            android:layout_width="52sp"
            android:layout_height="52sp"
            android:src="@drawable/photolog_logo"
            android:layout_margin="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 가족 일기"
        android:textSize="18sp"
        android:textColor="#5D3316"
        android:fontFamily="@font/paperlogy_6"
        app:layout_constraintTop_toBottomOf="@id/layout_logo"
        app:layout_constraintStart_toStartOf="@id/layout_logo" />

    <TableLayout
        android:id="@+id/recycler_family_diary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:stretchColumns="1"
        android:background="@drawable/family_table_border"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_pagination"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:background="@drawable/header_row_background">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="작성자"
                android:textColor="#5D3316"
                android:textSize="16sp"
                android:fontFamily="@font/paperlogy_7"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/cell_border_right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="일기"
                android:textColor="#5D3316"
                android:textSize="16sp"
                android:fontFamily="@font/paperlogy_7"
                android:gravity="center"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/layout_pagination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_left_arrow"
            android:contentDescription="이전 페이지" />

        <TextView
            android:id="@+id/tv_page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="-1-"
            android:textSize="18sp"
            android:textColor="#5D3316"
            android:fontFamily="@font/paperlogy_6" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_right_arrow"
            android:contentDescription="다음 페이지" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>