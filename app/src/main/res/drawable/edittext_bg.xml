<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFEEE0" />

    <!-- 반투명 검정 테두리 (60%) -->
    <stroke
        android:width="1dp"
        android:color="#99000000" /> <!-- #99 = 60% 투명도 -->

    <!-- 모서리 둥글게 -->
    <corners android:radius="10dp" />

    <!-- 크기 고정 -->
    <size
        android:width="280dp"
        android:height="45dp" />
</shape>
